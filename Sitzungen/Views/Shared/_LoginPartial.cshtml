@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><a href="#" style="cursor:default"><div class="text-info">@User.Identity.GetUserName()</div></a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Abmelden</a></li>
        </ul>
    }
}
