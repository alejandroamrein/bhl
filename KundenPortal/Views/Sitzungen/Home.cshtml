    {
        <li>@Html.ActionLink("Aufgaben", "Home", "Tasks")</li>
    }
    @if (ViewBag.K)
    {
        <li>@Html.ActionLink("Kalender", "Home", "Calendar")</li>
    }
    @if (ViewBag.G)
    {
        <li>@Html.ActionLink("Geschäft", "Home", "Geschaeft")</li>
    }
    @if (ViewBag.V)
    {
        <li>@Html.ActionLink("Behördenverzeichnis", "Home", "Verzeichnis")</li>
    }
    @if (ViewBag.E)
